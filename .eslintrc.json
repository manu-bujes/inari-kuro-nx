{
  "root": true,
  "ignorePatterns": ["**/*"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "vitest-globals/env": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended", 
    "plugin:vitest-globals/recommended", 
    "plugin:storybook/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  }
}
